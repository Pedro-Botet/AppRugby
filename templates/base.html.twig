<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<title>
			{% block title %}
				TheRugbyApp
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
			<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
			<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

			<script src="https://unpkg.com/axios/dist/axios.min.js"></script>


			<link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;1,100;1,200;1,300;1,400;1,500&display=swap" rel="stylesheet">
			<link rel="stylesheet" href="{{ asset('css/rugbyApp.css') }}">
		{% endblock %}
	</head>
	<body>
		{% block navbar %}
			<nav class="navbar navbar-expand-md bg-dark navbar-dark fixed-top">
				<a class="navbar-brand" href="">
					TheRugbyApp
				</a>
				<button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#mainMenu">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="mainMenu">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_homepage') }}">INICIO</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('estadisticas') }}">Estad√≠sticas Equipo</a>
						</li>
					</ul>
				</div>
				<div class="nav-item dropdown">
					{% if app.user %}
						<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							{{app.user.email}}
						</a>
						<div class="dropdown-menu" aria-labelledby="navbarDropdown">
							{% if app.user.userType == 'Jugador' %}
								<a class="dropdown-item" href="{{ path('miCuentaJugador', { userId: app.user.id }) }}">Mi cuenta</a>
							{% else %}
								<a class="dropdown-item" href="{{ path('miCuentaStaff', { userId: app.user.id }) }}">Mi cuenta</a>
							{% endif %}
							<a class="dropdown-item" href="{{ path('listar_jugadores' )}}">Jugadores</a>
							<div class="dropdown-divider"></div>
							<a class="dropdown-item" href="{{ path('app_logout') }}">Salir</a>
						</div>
					{% else %}
						<a class="nav-link" href="{{ path('app_login') }}">Conectarse</a>
					{% endif %}
				</div>
			</nav>
		{% endblock %}
		{% block body %}{% endblock %}
		{% block javascripts %}{% endblock %}
	</body>
</html>
