{% extends 'base.html.twig' %}

{% block title %}{{ titulo }}{% endblock %}

{% block body %}

    <div class="container">
        <h3 class="titulo">{{titulo}}</h3>
        
        <div class="form">
            {{ form_start(form) }}

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.nombre) }}
                        {{ form_widget(form.nombre) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.apellido) }}
                        {{ form_widget(form.apellido) }}
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.telefono) }}
                        {{ form_widget(form.telefono) }}
                    </div>
                </div>
            </div>

            <div class="bottom-buttons">
                <p class="form-error-text" id="form_register_error"></p>
                <button type="submit" id="submitButton" class="btn btn-outline-secondary">GUARDAR</button>
                <button class="btn btn-outline-info" onclick="window.history.back()">CANCELAR</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    
{% endblock %}
